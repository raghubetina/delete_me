<h1>Editing User #<%= @user.id %></h1>


<%= form_tag(user_url(@user), method: 'patch') do %>

  <div>
    <%= label_tag :username %><br />
    <%= text_field_tag :username, @user.username %>
  </div>

  <div>
    <%= label_tag :first_name %><br />
    <%= text_field_tag :first_name, @user.first_name %>
  </div>

  <div>
    <%= label_tag :last_name %><br />
    <%= text_field_tag :last_name, @user.last_name %>
  </div>

  <div>
    <%= label_tag :password_digest %><br />
    <%= text_field_tag :password_digest, @user.password_digest %>
  </div>

  <div>
    <%= label_tag :facebook_access_token %><br />
    <%= text_field_tag :facebook_access_token, @user.facebook_access_token %>
  </div>

  <div>
    <%= label_tag :facebook_id %><br />
    <%= text_field_tag :facebook_id, @user.facebook_id %>
  </div>

  
  <div>
    <%= submit_tag "Update User" %>
  </div>

<% end %>
